<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:id="@+id/result_header">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:id="@+id/result_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="20dp">


                <RelativeLayout
                    android:id="@+id/result_image_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:layout_gravity="center"
                    android:paddingLeft="10sp">



                    <ImageView
                        android:id="@+id/result_image_inside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/clip_source"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/result_image_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/egg"
                        android:scaleType="fitCenter" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:layout_marginTop="50sp"
                    android:layout_gravity="top">

                    <TextView
                        android:id="@+id/result_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="40dp"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="left" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:id="@+id/result_footer"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_result_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:text="Вернуться" />
            <Button
                android:id="@+id/button_try_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:text="Попробывать снова"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>